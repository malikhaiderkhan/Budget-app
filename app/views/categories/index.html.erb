<div class="navbar navbar-expand-lg bg-primary">
  <div class="container-fluid">
    <a class="navbar-brand" href="/">
      <%= image_tag('back.png', width: '30', height: '15') %>
    </a>
    <h5 class="text-light text-center flex-1">CATEGORIES</h5>
    <%= button_to "Logout", destroy_user_session_path, method: :delete, class: "text-white logout-btn" %>
  </div>
</div>

<div class="container-fluid mt-4">
  <div class="row">
    <div class="col">
      <p style="color: green"><%= notice %></p>

      <div class="p-3 container-lg justify-content-center col-lg-6 d-block">
        <% @categories.each do |category| %>
          <%= render partial: 'category', locals: { category: category } %>
        <% end %>
      </div>

      <div class="fixed-bottom bg-success p-3 container-lg justify-content-center col-lg-6">
      <%= link_to "New Category", new_category_path, class: "d-block w-100 p-5 bg-success border border-2 text-lg font-weight-medium border-white text-center text-white text-decoration-none" %>
      </div>
    </div>
  </div>
</div>