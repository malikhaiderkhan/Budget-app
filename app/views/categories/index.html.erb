<div class="navbar navbar-expand-lg bg-primary">
  <div class="container">
    <a class="navbar-brand" href="/">
      <%= image_tag('back.png', width: '30', height: '15') %>
    </a>
    <h4 class="text-light text-center flex-1">CATEGORIES</h4>
    <%= button_to "Logout", destroy_user_session_path, method: :delete, class: "text-white logout-btn" %>
  </div>
</div>

<div class="container mt-4">
  <div class="row">
    <div class="col">
      <p style="color: green"><%= notice %></p>
      <h1>Categories</h1>

      <div id="categories">
        <% @categories.each do |category| %>
          <%= render partial: 'category', locals: { category: category } %>
        <% end %>
      </div>

      <%= link_to "New category", new_category_path, class: "btn btn-primary mt-3" %>
    </div>
  </div>
</div>